@page "/"

<PageTitle>Home - PushDeliveredQueue</PageTitle>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <h1 class="display-4 mb-4">PushDeliveredQueue</h1>
            <p class="lead mb-5">
                A high-performance, push-based message queue system for .NET 9.0 with real-time monitoring capabilities.
            </p>
            
            <div class="row mb-5">
                <div class="col-md-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <i class="fas fa-tachometer-alt fa-3x text-primary mb-3"></i>
                            <h5 class="card-title">Real-time Monitoring</h5>
                            <p class="card-text">Monitor queue state, subscribers, and message processing in real-time.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <i class="fas fa-redo fa-3x text-warning mb-3"></i>
                            <h5 class="card-title">Dead Letter Queue</h5>
                            <p class="card-text">Handle failed messages with automatic retry and DLQ management.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <i class="fas fa-users fa-3x text-success mb-3"></i>
                            <h5 class="card-title">Multiple Subscribers</h5>
                            <p class="card-text">Support for multiple subscribers with independent cursors and DLQs.</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="d-grid gap-3 d-sm-flex justify-content-sm-center">
                <a href="/queue-monitor" class="btn btn-primary btn-lg px-4 gap-3">
                    <i class="fas fa-chart-line"></i> Open Queue Monitor
                </a>
                <a href="https://localhost:7001" target="_blank" class="btn btn-outline-secondary btn-lg px-4">
                    <i class="fas fa-code"></i> API Documentation
                </a>
            </div>
        </div>
    </div>
</div>
